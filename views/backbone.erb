<!DOCTYPE HTML>
<html>
    <head>
        <!-- CSS -->
        <style type="text/css" media="screen">
            .play_button{ color: green; }
            #feeds{ 
                float:left; 
                width: 300px;
                padding-right:20px
            }
            #player{ float: left; width: 500px }
            #refresh_feedback{ color: green; }
        </style>

        <!--JS -->
        <script src="/js/modernizr-1.6.min.js" type="text/javascript"></script>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.1/jquery.min.js" type="text/javascript"></script>
        <script src="/js/underscore-min.js" type="text/javascript"></script>
        <script src="/js/backbone-min.js" type="text/javascript"></script>
        <script src="/js/reader.js" type="text/javascript"></script>
        <script type="text/javascript">
            _.templateSettings = {
                interpolate: /\<\@\=(.+?)\@\>/gim,
                evaluate: /\<\@(.+?)\@\>/gim
            }
        </script>

        <script type="text/template" id="feeds-template-bkp">
            <@ _.each(f , function( feed ){ @>
                <h3> <@= feed.title @> </h3>
                <ul class="episodes">
                </ul>
            <@ });  @>
        </script>
        <script type="text/template" id="feeds-template">
        </script>
        <script type="text/template" id="feed-template">
                <h3> <@= title @> </h3>
                <ul class="episodes">
                </ul>
        </script>
        <script type="text/template" id="episodes-template">
            <@= title @>
        </script>
    </head>
    <body>

        <h1> RSS Feeder </h1>
        <div id="refresh_feeds" class="">
            <input type="button" name="refresh" value="refresh feeds" id="refresh"/>
            <p id="refresh_feedback">  </p>
        </div>
        <div id="all_feeds">
        </div>

        <div id="player">
            <h4 id="playing">  </h4>
            <p>
                <em id="published"></em>
            </p>
            <audio id="playhead" controls="controls" src="" >
            Balls, this browser is not HTML5'y enough
            </audio>
            <div id="content"></div>
        </div>

        <script>
            $(function(){
            //    window.library = window.feedlibrary.fetch();
        feeds = new Feeds();
        feeds.fetch();
        window.App = new AllFeedsView({ collection : feeds });
        $("#all_feeds").append( window.App.render().el );
            });
        </script>
    </body>
</html>
